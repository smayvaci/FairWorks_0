@model UpdateSectorPageVM
@{
    ViewBag.Title = "UpdateSector";
}

<h2>UpdateSector</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Sector.ID)

    <div>
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Sektör Güncelleme Sayfası
                </header>

                <div class="form-group">
                    <label class="col-sm-2">
                        Sektör Adı
                    </label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Sector.SectorName, new { @class = "form-control-genislik" })

                    </div>
                    <div class="form-group">
                        <label class="col-md-2">
                            İşlem
                        </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Güncelle
                            </button>

                        </div>

                    </div>
                </div>
            </section>

        </div>
    </div>
}




