@model UpdateCountryPageVM
@{
    ViewBag.Title = "UpdateCountry";
}

<h2>UpdateCountry</h2>

@using (Html.BeginForm())
{
    <div>
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Ülke Ekleme Sayfası
                </header>

                <div class="form-group">
                    <label class="col-sm-2">
                        Ülke Adı
                    </label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Country.CountryName, new { @class = "form-control-genislik" })

                    </div>
                    <div class="form-group">
                        <label class="col-md-2">
                            İşlem
                        </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">
                                Güncelle
                            </button>

                        </div>

                    </div>
                </div>
            </section>

        </div>
    </div>
}
